<h1>Mini blog</h1>

<hr size="4" color="gray">

<% @posts.each do |post| %>
<table>
    <tr>
      <td><%= post.id %> : </td>
      <td><b><%= link_to post.text, post %></b></td>
    </tr>
    <tr>
      <td><%= button_to post_likes_path(post),id:"like-buttons", remote: true do %>いいね
      <span><%= post.likes_count %></span>
      <% end %>
      </td>
      <td>コメント数: <%= post.comments.count %> | </td>
      <td>投稿日時: <%= post.created_at %></td>
    </tr>
</table>
<hr size="1" color="gray">
<% end %>

<p>
<%= link_to '新しく投稿する', new_post_path%>
</p>